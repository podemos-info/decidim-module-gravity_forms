<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>

      <%= link_to t("actions.new", scope: "decidim.gravity_forms", name: t("models.gravity_form.name", scope: "decidim.gravity_forms.admin")), new_gravity_form_path, class: 'button tiny button--simple' if can? :manage, current_feature %>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th>
              <%= t("models.gravity_form.fields.title", scope: "decidim.gravity_forms") %>
            </th>

            <th class="actions">
              <%= t("actions.title", scope: "decidim.gravity_forms") %>
            </th>
          </tr>
        </thead>

        <tbody>
          <% gravity_forms.each do |gravity_form| %>
            <tr data-id="<%= gravity_form.id %>">
              <td>
                <%= translated_attribute(gravity_form.title) %>
              </td>

              <td class="table-list__actions">
                <%= icon_link_to "eye", resource_locator(gravity_form).path, t("actions.preview", scope: "decidim.gravity_forms"), class: "action-icon--preview", target: :blank %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate gravity_forms, theme: "decidim" %>
    </div>
  </div>
</div>
